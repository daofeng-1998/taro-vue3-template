// ESLint 检查 .vue 文件需要单独配置编辑器：
// https://eslint.vuejs.org/user-guide/#editor-integrations
{
    "extends": ["taro/vue3"],
    "rules": {
        "quotes": ["error", "single"],
        "vue/multi-word-component-names": "off",
        "semi": ["error", "always"],
        "indent": ["error", 4],
        "block-spacing": ["error", "always"],
        "object-curly-spacing": ["error", "always"],
        "no-multiple-empty-lines": [
            "error", {
                "max": 2,
                "maxEOF": 1
            }
        ]
    }
}
